# Environment Variables for CubicleRide Backend Production Deployment
# Copy this file to .env and fill in the actual values

# =============================================================================
# SHARED VARIABLES
# =============================================================================
# JWT Secret - should be a long, random string (minimum 256 bits)
JWT_SECRET=qwertyuiopasdfghjklzxcvbnmqwertyuiop

# Eureka Configuration
EUREKA_DEFAULT_ZONE=http://eureka-server:8761/eureka

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
# Auth Service Database
AUTH_DATASOURCE_URL=jdbc:mysql://your-mysql-server.mysql.database.azure.com:3306/carpool_auth?useSSL=true&requireSSL=false&serverTimezone=UTC
AUTH_DATASOURCE_USERNAME=your-db-username
AUTH_DATASOURCE_PASSWORD=your-db-password

# Employee Service Database
EMPLOYEE_DATASOURCE_URL=jdbc:mysql://your-mysql-server.mysql.database.azure.com:3306/carpool_employee?useSSL=true&requireSSL=false&serverTimezone=UTC
EMPLOYEE_DATASOURCE_USERNAME=your-db-username
EMPLOYEE_DATASOURCE_PASSWORD=your-db-password

# Ride Service Database
RIDE_DATASOURCE_URL=jdbc:mysql://your-mysql-server.mysql.database.azure.com:3306/carpool_ride?useSSL=true&requireSSL=false&serverTimezone=UTC
RIDE_DATASOURCE_USERNAME=your-db-username
RIDE_DATASOURCE_PASSWORD=your-db-password

# =============================================================================
# KAFKA/EVENT HUBS CONFIGURATION
# =============================================================================
KAFKA_BOOTSTRAP_SERVERS=your-eventhub-namespace.servicebus.windows.net:9093
KAFKA_NOTIFICATIONS_TOPIC=notifications

# If using Azure Event Hubs, you'll also need:
# EVENT_HUBS_CONNECTION_STRING=Endpoint=sb://your-namespace.servicebus.windows.net/;SharedAccessKeyName=RootManageSharedAccessKey;SharedAccessKey=your-key

# =============================================================================
# EMAIL CONFIGURATION (Auth Service)
# =============================================================================
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_USERNAME=harshiitsonii@gmail.com
MAIL_PASSWORD=your-app-specific-password

# =============================================================================
# SERVER PORTS (Optional - will use defaults if not set)
# =============================================================================
EUREKA_SERVER_PORT=8761
API_GATEWAY_SERVER_PORT=8080
AUTH_SERVICE_SERVER_PORT=8081
EMPLOYEE_SERVICE_SERVER_PORT=8082
RIDE_SERVICE_SERVER_PORT=8083
ADMIN_SERVICE_SERVER_PORT=8084

# =============================================================================
# JPA CONFIGURATION (Optional - will use defaults if not set)
# =============================================================================
JPA_DDL_AUTO=validate
JPA_SHOW_SQL=false

# =============================================================================
# AZURE CONTAINER APPS SPECIFIC
# =============================================================================
SPRING_PROFILES_ACTIVE=prod

# =============================================================================
# SECURITY NOTES:
# =============================================================================
# 1. Never commit this file with real values to version control
# 2. Use Azure Key Vault for production secrets
# 3. Rotate JWT_SECRET periodically
# 4. Use strong passwords for database access
# 5. Enable SSL for database connections in production
